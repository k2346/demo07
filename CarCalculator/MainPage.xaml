<Page
    x:Class="CarCalculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CarCalculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="truckButton" Content="Trucks" HorizontalAlignment="Left" Margin="268,88,0,0" VerticalAlignment="Top" Height="193" Width="267" Background="#332C7E2C" FontSize="33.667" Click="truckButton_Click"/>
        <Button x:Name="carButton" Content="Cars" HorizontalAlignment="Left" Margin="622,88,0,0" VerticalAlignment="Top" Height="193" Width="256" Background="#330F0FE8" FontSize="33.667" Click="carButton_Click"/>
        <TextBlock x:Name="trucksBlock" HorizontalAlignment="Left" Margin="411,309,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="75" Width="81"  FontSize="27"/>
        <TextBlock x:Name="carsBlock" HorizontalAlignment="Left" Margin="752,309,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="79" Width="161" Foreground="#FF8F1717" FontSize="27"/>

    </Grid>
</Page>
